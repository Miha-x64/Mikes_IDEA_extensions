<idea-plugin>

    <extensions defaultExtensionNs="com.intellij">

        <localInspection
                language="XML"
                shortName="androidIncludeLayoutByThemeAttr" displayName="Using &lt;include&gt; with layout from theme attribute"
                groupName="Android"
                enabledByDefault="true" level="ERROR"
                implementationClass="net.aquadc.mike.plugin.android.IncludeLayoutByThemeAttrInspection" />
        <localInspection
                language="XML"
                shortName="androidViewClassByRes" displayName="Using &lt;view&gt; with class from resources"
                groupName="Android"
                enabledByDefault="true" level="ERROR"
                implementationClass="net.aquadc.mike.plugin.android.ViewClassFromResourcesInspection" />

        <localInspection
                language="XML"
                shortName="androidBitmapTint" displayName="Using &lt;bitmap android:tint&gt;"
                groupName="Android"
                enabledByDefault="true" level="ERROR"
                implementationClass="net.aquadc.mike.plugin.android.BitmapTintInspection" />

        <localInspection
                language="UAST"
                shortName="androidTargetApiShouldBeRequires" displayName="@TargetApi should be replaced with @RequiresApi"
                groupName="Android"
                enabledByDefault="true" level="WARNING"
                implementationClass="net.aquadc.mike.plugin.android.TargetApiInspection" />

        <localInspection
                language="UAST"
                shortName="reflectPropAnimInspection" displayName="Use of reflective ObjectAnimator/PropertyValuesHolder"
                groupName="Android"
                enabledByDefault="true" level="WARNING"
                implementationClass="net.aquadc.mike.plugin.android.ReflectPropAnimInspection" />

    </extensions>

</idea-plugin>
